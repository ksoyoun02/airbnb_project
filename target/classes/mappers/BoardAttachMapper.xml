<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.spring.airbnb.board.mapper.BoardAttachMapper">

  
  	<insert id="insert">
  		INSERT INTO tbl_attach(uuid, uploadPath, fileName, filetype, bno)
  		VALUES (#{uuid}, #{uploadPath}, #{fileName}, #{filetype}, #{bno})
  	</insert>
  	
  	<delete id="delete">
  		DELETE from tbl_attach
  		WHERE uuid = #{uuid}
  	</delete>
  	
  	<select id="findByBno" resultType="com.spring.airbnb.board.domain.BoardAttachDTO">
  		SELECT * 
  		FROM tbl_attach
  		WHERE bno = #{bno}
  	</select>
  	
  	<delete id="deleteAll">
  		DELETE FROM tbl_attach
  		WHERE bno = #{bno}
  	</delete>
  	
  	<select id="getOldFiles" resultType="com.spring.airbnb.board.domain.BoardAttachDTO">
  		SELECT *
  		FROM tbl_attach
  		WHERE uploadpath = to_char(sysdate -1, 'yyyy\mm\dd')
  	</select>
  </mapper>